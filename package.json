{
  "name": "simple-fake-api",
  "version": "1.0.0",
  "description": "A Node.js library for creating fake APIs from file structure.",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "simple-fake-api": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "node ./node_modules/.bin/eslint .",
    "lint:fix": "node ./node_modules/.bin/eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:format": "npm run lint && npm run format:check",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "fake-api",
    "api",
    "mock",
    "development",
    "server"
  ],
  "author": "Marco Aurelio Pontes",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^9.3.0",
    "express": "^5.1.0",
    "glob": "^11.0.0",
    "json-schema-faker": "^0.5.9"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.7.5",
    "@vitest/coverage-v8": "^2.1.3",
    "@eslint/js": "^9.13.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "typescript-eslint": "^8.10.0",
    "eslint": "^9.13.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.3"
  },
  "files": [
    "dist/**",
    "readme.md",
    "LICENSE",
    "package.json"
  ],
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marco-pontes/simple-fake-api.git"
  },
  "bugs": {
    "url": "https://github.com/marco-pontes/simple-fake-api/issues"
  },
  "homepage": "https://github.com/marco-pontes/simple-fake-api#readme",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}

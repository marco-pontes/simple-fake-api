{
  "name": "simple-fake-api-example",
  "version": "1.0.0",
  "description": "An example project using the simple-fake-api library.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "api": "simple-fake-api"
  },
  "dependencies": {
    "@marco-pontes/simple-fake-api": "^1.0.9"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "simple-fake-api-config": {
    "port": 5000,
    "apiDir": "api",
    "collectionsDir": "collections",
    "wildcardChar": "_",
    "http": {
      "endpoints": {
        "api-server": {
          "dev": { "baseUrl": "http://localhost:5000" },
          "staging": { "baseUrl": "https://staging.endpoint.com" },
          "prod": { "baseUrl": "https://prod.endpoint.com" }
        }
      }
    }
  }
}
